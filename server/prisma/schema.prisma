generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// model para indicar que Ã© uma tabela
// @id = chave primaria
// @default(uuid()) = para criar um uuid para o id
// @@map("habits") = nome da tabela no banco de dados
model Habit {
  id        String   @id @default(uuid())
  title     String
  create_at DateTime

  @@map("habits")
}
